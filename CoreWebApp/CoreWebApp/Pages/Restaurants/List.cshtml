@page

@model CoreWebApp.Pages.Resataurants.ListModel
@{
}
@*page directive tells asp.net that its a razor page & model directory tells it's gonna use ListModel*@

<h1>Restaurants</h1>

<table class="table">
    @foreach(var restaurant in Model.restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Cuisine</td>
            <td>@restaurant.Location</td>
        </tr>
    }

</table>
@Model.testconfig
